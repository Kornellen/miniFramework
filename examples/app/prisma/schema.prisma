generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

enum Gender {
  Male
  Female
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  username String
  profile  Profile[]
}

model Profile {
  id     String     @id
  fName  String?
  lName  String?
  bio    String?
  gender Gender
  user   User    @relation(fields: [id], references: [id])
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
